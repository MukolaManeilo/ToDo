@model IEnumerable<ToDo.Models.Tasks>
@{
    ViewData["Title"] = "Home";
}
<div>
    <div class="columns is-mobile">
        <div class="column is-half is-offset-one-quarter" style="min-width: 700px">
            <button class="button is-success is-outlined" style="margin: 0; width: 100%">Create</button>
        </div>
    </div>
    @foreach (var item in Model)
    {
        @if (item.Status == "InProgress")
        {
            <div class="columns is-mobile">
                <div class="column is-half is-offset-one-quarter" style="min-width: 700px">
                    <div class="box">
                        <div class="columns">
                            <div class="column is-narrow">
                                <a class="subtitle is-4">
                                    @item.Title
                                </a>
                            </div>
                            <div class="column"></div>
                            <div class="column is-narrow">
                                <a class="subtitle is-4">
                                    @item.Theme
                                </a>
                            </div>
                            <div class="column is-narrow">
                                <a asp-action="Editor" asp-route-taskId="@item.Id">
                                    <button class="button is-info is-outlined">Edit</button>
                                </a>
                            </div>
                            <div class="column is-narrow">
                                <button class="button is-danger is-outlined">Delete</button>
                            </div>
                            <div class="column is-narrow">
                                <label class="checkbox">
                                    <input type="checkbox" style="width: 20px; height: 20px; margin: 10px 0px 10px 0px">
                                </label>
                            </div>
                        </div>
                        <hr style="margin-top: 0" />
                        <label class="subtitle is-5">@item.Content</label>
                    </div>
                </div>
            </div>
        }
    }
    <div style="height: 50px"></div>
    @foreach (var item in Model)
    {
        @if (item.Status == "Done")
        {
            <div class="columns is-mobile">
                <div class="column is-half is-offset-one-quarter" style="min-width: 700px">
                    <div class="box">
                        <div class="columns">
                            <div class="column is-narrow">
                                <a class="subtitle is-4">
                                    @item.Title
                                </a>
                            </div>
                            <div class="column"></div>
                            <div class="column is-narrow">
                                <a class="subtitle is-4">
                                    @item.Theme
                                </a>
                            </div>
                            <div class="column is-narrow">
                                <button class="button is-danger is-outlined">Delete</button>
                            </div>
                            <div class="column is-narrow">
                                <label class="checkbox">
                                    <input type="checkbox" style="width: 20px; height: 20px; margin: 10px 0px 10px 0px" checked>
                                </label>
                            </div>
                        </div>
                        <hr style="margin-top: 0" />
                        <label class="subtitle is-5">@item.Content</label>
                    </div>
                </div>
            </div>
        }
    }
</div>
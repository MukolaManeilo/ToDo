@model ToDo.Models.Tasks
@{
	ViewData["Title"] = "Edit";
}

<div class="columns is-mobile">
    <div class="column is-half is-offset-one-quarter" style="height: 150px">
    </div>
</div>

<div class="columns is-mobile">
    <div class="column is-half is-offset-one-quarter">
        <form method="post" class="box" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id"/>
            <div class="field">
                <label class="label">Title</label>
                <div class="control">
                    <input class="input" asp-for="Title" type="text" placeholder="Title">
                </div>
            </div>
            <div class="field">
                <label class="label">Theme</label>
                <div class="control">
                    <input list="theme" class="input" asp-for="Theme" type="text">
                    <datalist id="theme">
                        <option value="None"></option>
                        <option value="Work"></option>
                        <option value="Study"></option>
                        <option value="Housework"></option>
                        <option value="Other"></option>
                    </datalist>
                </div>
            </div>
            <input type="hidden" asp-for="Status" />
            <input type="hidden" asp-for="CreatedAt" />
            <div class="field">
                <label class="label">Content</label>
                <div class="control">
                    <input class="input" asp-for="Content" type="text">
                </div>
            </div>

            <button class="button is-primary">Edit</button>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}